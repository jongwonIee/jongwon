<% provide(:page_title, 'Blog(Beta)') %>

<div class="htlfndr-wrapper">
  <main role="main">
    <section class="container-fluid htlfndr-categories-portfolio">
      <!-- category1 -->
      <h2 class="htlfndr-section-title bigger-title">Blog(Beta)</h2>
      <!-- category1 -->
      <div class="htlfndr-section-under-title-line"></div>
      <div class="container">
        <div class="row">
          <% if @posts %>
            <% @posts.each do |post| %>
              <div class="col-sm-4 col-xs-6">
                <div class="htlfndr-category-box" onclick="void(0)">
                  <img src="/assets/img<%= Post.order(:id).ids.find_index(post.id) + 1 %>.png" style= 'height:310px' />
                  <div class="category-description">
                    <h2 class="subcategory-name">#<%= Post.order(:id).ids.find_index(post.id) + 1 %></h2>
                    <%= link_to '', post, class:'htlfndr-category-permalink'%> <!--link to show with a button-->
                    <br><br>
                    <h5 class="category-name"><%= post.title %></h5>
                  </div><!-- .category-description -->
                </div><!-- .htlfndr-category-box -->
              </div><!-- .col-sm-4.col-xs-6 -->
            <% end %>
          <% end %>
        </div><!-- .row -->
      </div><!-- .container -->
    </section><!-- .container-fluid.htlfndr-visitors-cards -->
  </main>
</div><!-- .htlfndr-wrapper -->